.layout-lineup {
    min-width: 1180px;
    max-width: 1600px;
    margin: 75px auto 0;
}

.mod-lineup-title {
    padding-top: 59px;
    margin: 0 auto 61px;
    width: 160px;
}

.layout-dustJacket-pop {
    background: url("../fig/common/bg_pop.gif") top left !important;
}

.layout-dustJacket-left {
    position: relative;
    float: left;
    width: 50%;
    background: url("../fig/common/bg_rock.gif") top left;
    overflow: hidden;
}

.mod-dustJacket-img {
    width: 100%;
}

.mod-dustJacket-img img {
    width: 100%;
    height: auto;
    vertical-align: top;
}

.layout-dustJacket-right {
    position: relative;
    float: right;
    width: 50%;
    background: url("../fig/common/bg_rock.gif") top left;
    overflow: hidden;
}

.layout-dustJacket-stageBadge {
    position: absolute;
    top: -22px;
    right: -54px;
}

.layout-dustJacket-stageBadge .inner {
    position: relative;
    width: 125px;
    height: 125px;
}

.layout-dustJacket-stageBadge .inner p {
    position: absolute;
    top: 0;
    left: 0;
}

.layout-dustJacket-mold {
    visibility: hidden;
    width: 100%;
}

.layout-dustJacket-mold img {
    vertical-align: top;
    width: 100%;
    height: auto;
}

.layout-dustJacket-contents {
    position: absolute;
    top: 53px;
    left: 50%;
    margin-left: -257.5px;
    width: 515px;
}

.mod-dustJacket-workTitle {
    width: 340px;
    margin: 0 auto 30px;
}

.mod-dustJacket-description {
    font-size: 14px;
    line-height: 1.5em;
    margin-bottom: 52px;
    letter-spacing: 0.02em;
}

.mod-dustJacket-link {
    width: 248px;
    margin: 0 auto;
    -webkit-transition: all 0.45s cubic-bezier(0.77, 0, 0.175, 1);
    transition: all 0.45s cubic-bezier(0.77, 0, 0.175, 1);
}

.mod-dustJacket-link:hover {
    opacity: 0.75;
}

.layout-eventcast {
    padding-bottom: 61px;
}

.mod-eventcast-title {
    width: 254px;
    margin: 59px auto 60px;
}

.layout-eventcast-dataList {
    text-align: center;
    letter-spacing: -.40em;
}

.layout-eventcast-dataItem {
    letter-spacing: normal;
    display: inline-block;
    margin-left: 20px;
}

.layout-eventcast-dataItem:first-child {
    margin-left: 0px;
}

.layout-eventcast-dataItem p {
    text-align: left;
}

.mod-eventcast-dataItem-img {
    margin-bottom: 12px;
}

.mod-eventcast-dataItem-actName {
    color: #f33342;
    font-size: 12px;
    margin-bottom: 9px;
}

.mod-eventcast-dataItem-actorName {
    font-size: 14px;
}

.layout-devide {
    width: 100%;
    height: 2px;
    background: #ffd5df;
}

.layout-stagecast {
    padding-top: 59px;
    margin-bottom: 60px;
}

.mod-stagecast-title {
    width: 256px;
    margin: 0 auto 59px;
}

.layout-stagecast-dataList {
    text-align: center;
    letter-spacing: -.40em;
}

.layout-stagecast-dataItem {
    letter-spacing: normal;
    display: inline-block;
    margin-left: 20px;
}

.layout-stagecast-dataItem:first-child {
    margin-left: 0px;
}

.layout-stagecast-dataItem p {
    text-align: left;
}

.mod-stagecast-dataItem-img {
    margin-bottom: 13px;
}

.mod-stagecast-dataItem-name {
    font-size: 14px;
}

.layout-lineuplink a {
    color: #000;
    text-decoration: none;
}

.layout-lineuplink-left {
    width: 50%;
    height: 346px;
    float: left;
    background: url("../fig/common/bg_pop.gif") top left;
}

.mod-lineuplink-title {
    width: 148px;
    margin: 60px auto 28px;
}

.layout-lineuplink-dataList {
    width: 343px;
    margin: 0 auto;
}

.layout-lineuplink-dataItem {
    position: relative;
    float: left;
    margin-left: 20px;
    -webkit-transition: all 0.75s cubic-bezier(0.77, 0, 0.175, 1);
    transition: all 0.75s cubic-bezier(0.77, 0, 0.175, 1);
}

.layout-lineuplink-dataItem:first-child {
    margin-left: 0px;
}

.layout-lineuplink-dataItem:hover {
    opacity: .75;
}

.mod-lineuplink-img {
    width: 101px;
    margin-bottom: 15px;
}

.mod-lineuplink-img img {
    width: 100%;
    height: auto;
}

.mod-lineuplink-active {
    opacity: 1 !important;
}

.mod-lineuplink-workName {
    font-size: 15px;
}

.mod-lineuplink-now {
    position: absolute;
    top: 0;
    left: 0;
}

.layout-lineuplink-right {
    width: 50%;
    height: 346px;
    float: right;
    background: url("../fig/common/bg_rock.gif") top left;
}
